<%= form_with(model: book, class: "max-w-3xl mx-auto p-8 bg-white rounded-xl shadow-lg") do |form| %>
  <% if book.errors.any? %>
    <div class="mb-8 bg-red-50 p-6 rounded-xl border border-red-100">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-base font-medium text-red-800">
            <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
          </h3>
          <div class="mt-3 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-2">
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-10">
      <div>
        <%= form.label :title, class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full border border-gray-300 h-12 px-4 rounded-lg border-gray-300 shadow-sm ring-black focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
      </div>

      <div>
        <%= form.label :author, class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= form.text_field :author, class: "w-full border border-gray-300 h-12 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-10">
      <div>
        <%= form.label :isbn, class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= form.text_field :isbn, class: "w-full h-12 border border-gray-300 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
        <p class="mt-2 text-sm text-gray-500">Enter ISBN-10 or ISBN-13 format</p>
      </div>

      <div>
        <%= form.label :publisher, class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= form.text_field :publisher, class: "w-full border border-gray-300 h-12 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-10">
      <div>
        <%= form.label :publication_year, class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= form.number_field :publication_year, class: "w-full  border border-gray-300 h-12 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
      </div>

      <div>
        <%= form.label :language, class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= form.select :language, 
            options_for_select([
              ['English', 'English'],
              ['Spanish', 'Spanish'],
              ['French', 'French'],
              ['German', 'German'],
              ['Chinese', 'Chinese'],
              ['Japanese', 'Japanese'],
              ['Other', 'Other']
            ], book.language),
            {},
            class: "w-full h-12 px-4 rounded-lg  border border-gray-300 border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
      </div>
    </div>

    <div>
      <%= form.label :description, class: "block text-base font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition duration-150" %>
    </div>
  </div>

  <div class="mt-12 pt-8 border-t border-gray-200">
    <div class="flex justify-end space-x-6">
      <%= link_to 'Cancel', books_path, class: "px-8 py-3 text-base font-medium text-gray-700 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150" %>
      
      <%= form.submit class: "px-8 py-3 text-base  border border-gray-300 font-medium text-white bg-blue-600 border border-transparent rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150" %>
    </div>
  </div>
<% end %>